<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在定位..."
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#000"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nby.news.View.MyCircleView
            android:id="@+id/user_tx"
            android:src="@drawable/ic_mytag"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="nby"/>
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/weather_bg"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今日天气"
                    android:textColor="#fff"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/weather_jr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:text="晴 12C~25C 东南风 4~5级"/>
                <TextView
                    android:id="@+id/weather_ck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:gravity="center_horizontal"
                    android:text="此刻：12C 东南风 4级"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>