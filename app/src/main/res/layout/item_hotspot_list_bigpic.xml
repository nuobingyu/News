<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_hotspot_item_bigpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我测试一"
            android:ellipsize="end"
            android:textSize="16sp"
            android:maxLines="2"
            android:textColor="#6d6868"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/image_hotspot_item_bigpic"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/zwt"
                android:layout_height="160dp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/from_hotspot_item_bigpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="腾讯网" />
            <TextView
                android:id="@+id/time_hotspot_item_bigpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:text="09-18" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>