<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/rev_vt_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black_color"
            android:text="日本抗议中国东海勘探活动 中方：从未承认“中间线”"/>
        <TextView
            android:id="@+id/rev_vt_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2018 10.20"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="5dp"
            android:gravity="right"/>
        <ImageView
            android:id="@+id/rev_vt_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/rev_vt_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:lines="4"
            android:text="我是Text 我是Text 我是Text " />
    </LinearLayout>






</android.support.v7.widget.CardView>